block('page').elem('base')
(
    bem()(false),

    tag()('base'),

    attrs()
    (
        function()
        {
            var attrs = {};

            if (this.ctx.hasOwnProperty('url')) {
                attrs.href = this.ctx.url;
            }

            if (this.ctx.hasOwnProperty('target')) {
                attrs.href = this.ctx.target;
            }

            return attrs;
        }
    )
);

