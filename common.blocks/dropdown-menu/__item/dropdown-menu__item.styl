.dropdown-menu

    &__item
        color: #000
        display: inline-block
        padding: 10px
        text-align: center
        text-decoration: none

        &:hover
        &.dropdown_opened
            background: #000
            color: #fff

        &_state

            &_active
                background: red
                color: #fff

                &:hover
                    background: red

            &_active-child
                background: darkred
                color: #fff

                &:hover
                    background: darkred
